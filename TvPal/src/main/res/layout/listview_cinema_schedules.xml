<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView android:id="@+id/cinemaPicture"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="80dp"
        android:maxHeight="80dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/movie"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinemaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Movie"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cinemaImdbScore"
            android:layout_below="@+id/cinemaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="IMDB"/>

        <TextView
            android:id="@+id/cinemaRestricted"
            android:layout_below="@+id/cinemaImdbScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Bönnuð innan"/>

    </RelativeLayout>

</LinearLayout>