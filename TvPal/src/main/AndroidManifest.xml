<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="is.tvpal"
    android:versionCode="5"
    android:versionName="1.3" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TVPalTheme"
        android:debuggable="false">
        <activity
            android:name="is.activites.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="is.activites.schedules.DisplayStod2Activity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_display_stod2" >
        </activity>
        <activity
            android:name="is.activites.schedules.DisplayRuvActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_display_ruv" >
        </activity>
        <activity
            android:name="is.activites.schedules.DisplaySkjarinnActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_display_skjarinn" >
        </activity>
        <activity
            android:name="is.activites.schedules.DetailedEventActivity"
            android:label="@string/title_activity_detailed_event" >
        </activity>
        <activity
            android:name="is.activites.shows.MyShowsActivity"
            android:label="@string/title_activity_my_shows" >
        </activity>
        <activity
            android:name="is.activites.shows.SingleSeasonActivity"
            android:label="@string/title_activity_single_season" >
        </activity>
        <activity
            android:name="is.activites.shows.EpisodeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_episode" >
        </activity>
        <activity
            android:name="is.activites.shows.UpcomingRecentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_upcoming_shows" >
        </activity>
        <activity
            android:name="is.activites.shows.SeriesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_show" >
        </activity>
        <activity
            android:name="is.activites.shows.SearchShowsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_search_shows"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="is.activites.movies.CinemaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cinema" >
        </activity>
        <activity
            android:name="is.activites.movies.DetailedCinemaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cinema" >
        </activity>
        <activity
            android:name="is.activites.movies.SearchMoviesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/title_activity_trending_movies" >
        </activity>
        <activity
            android:name="is.activites.movies.DetailedMovieActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_detailed_movie" >
        </activity>
        <activity
            android:name="is.activites.movies.TraktCommentsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/trakt_comments" >
        </activity>
        <activity
            android:name="is.activites.movies.WatchlistActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/watchlist" >
        </activity>
        <activity
            android:name="is.activites.movies.RelatedMovieActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/related_movies" >
        </activity>

        <service android:name="is.activites.reminders.ScheduleService" />
        <service android:name="is.activites.reminders.NotifyService" />
    </application>

</manifest>
